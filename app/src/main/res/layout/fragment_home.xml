<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeFragment"
    android:background="#FF5722">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFFFF"
        android:layout_alignParentTop="true" >

        <!--  the text "Enger" in  the Toolbar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enger"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_gravity="left"/>
        <!-- drop down icon to the right of the Toolbar -->
        <ImageView
            android:id="@+id/drop_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_drop_down_24"
            android:layout_marginEnd="16dp"></ImageView>


        <!-- notification icon to the right of the Toolbar -->
        <ImageView
            android:id="@+id/notif_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_notifications_24"
            android:layout_gravity="right"
            android:layout_marginEnd="16dp"

            >

        </ImageView>




    </androidx.appcompat.widget.Toolbar>

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_centerInParent="true"
        android:textSize="35dp"
        android:textColor="@color/white"/>







</RelativeLayout>
